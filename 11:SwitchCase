void main(){
  //switch case : evalua un   aexpresion, hace coincidir el valor de la expresion con una clausual de caso y ejecuta las declaraciones asociadas en cada caso.
  var estadoBanco = "Cerrado";
  
  switch(estadoBanco){
    case "Abierto":
      print("Banco abierto");
      break;
    case "Cerrado":
      print("Banco Cerrado");
      break;
  }
  
  // el if es una condicion
  // cuando hay bastantes if anidados es mejor usar switch, porque lo reusme de mejor forma.
  // ejem2
  final mesActual = 3;
  switch(mesActual){
    case 1:
      print("Enero");
      break;
      
    case 2:
      print("Febrero");
      break;
      
    case 3:
      print("Marzo");
      break;
    
    case 4:
      print("Abril");
      break;
      
    case 5:
      print("Mayo");
      break;
      
    case 6:
      print("Junio");
      break;
      
    case 7:
      print("Julio");
      break;
      
    case 8:
      print("Agosto");
      break;
    
    case 9:
      print("Septiembre");
      break;
      
    case 10:
      print("Octubre");
      break;
      
    case 11:
      print("Noviembre");
      break;
      
    case 12:
      print("Diciembre");
      break;
      
    // por si un mes no existe se usa default
    default:
      print("Este mes no existe");
      break;
  }
}
